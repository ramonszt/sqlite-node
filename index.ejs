<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Cadastro de Usuários</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-5">
  <div class="container">
    <h1 class="mb-4">Cadastro de Usuários</h1>

    <form action="/add" method="POST" class="mb-4">
      <div class="row g-3">
        <div class="col-md-5">
          <input type="text" name="nome" class="form-control" placeholder="Nome" required>
        </div>
        <div class="col-md-5">
          <input type="email" name="email" class="form-control" placeholder="Email" required>
        </div>
        <div class="col-md-2">
          <button type="submit" class="btn btn-primary w-100">Cadastrar</button>
        </div>
      </div>
    </form>

    <table class="table table-striped table-hover">
      <thead class="table-light">
        <tr>
          <th>ID</th>
          <th>Nome</th>
          <th>Email</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% usuarios.forEach(usuario => { %>
          <tr>
            <td><%= usuario.id %></td>
            <td><%= usuario.nome %></td>
            <td><%= usuario.email %></td>
            <td>
              <a href="/edit/<%= usuario.id %>" class="btn btn-outline-success">Editar</a>
              <a href="/delete/<%= usuario.id %>" class="btn btn-outline-danger" onclick="return confirm('Tem certeza que deseja excluir?')">Excluir</a>
            </td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  </div>
</body>
</html>
